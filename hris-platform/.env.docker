# Docker Environment Variables for HRIS Platform
# Copy this file to .env.docker.local and customize for your local environment

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_DB=hris_db
POSTGRES_USER=hris_user
POSTGRES_PASSWORD=hris_password_change_me
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=hris_redis_pass_change_me
REDIS_PORT=6379

# =============================================================================
# MinIO Configuration (S3-compatible storage)
# =============================================================================
MINIO_ROOT_USER=hris_minio
MINIO_ROOT_PASSWORD=hris_minio_pass_change_me
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_DEFAULT_BUCKET=hris-documents

# =============================================================================
# Elasticsearch Configuration (Optional)
# =============================================================================
ELASTICSEARCH_PORT=9200

# =============================================================================
# Admin Tools Configuration (Optional)
# =============================================================================
# PgAdmin
PGADMIN_EMAIL=admin@hris.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis Commander
REDIS_COMMANDER_PORT=8081

# =============================================================================
# Application Environment Variables
# (These should match your .env file in the root)
# =============================================================================
NODE_ENV=development

# Database URL for applications
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=hris_user
DATABASE_PASSWORD=hris_password_change_me
DATABASE_NAME=hris_db
DATABASE_URL=postgresql://hris_user:hris_password_change_me@localhost:5432/hris_db

# Redis URL for applications
REDIS_HOST=localhost
REDIS_URL=redis://:hris_redis_pass_change_me@localhost:6379

# MinIO/S3 Configuration for applications
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=hris_minio
S3_SECRET_KEY=hris_minio_pass_change_me
S3_BUCKET=hris-documents
S3_REGION=us-east-1

# Elasticsearch URL for applications
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=your_jwt_secret_key_change_me_in_production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_change_me_in_production
JWT_REFRESH_EXPIRATION=30d

# =============================================================================
# Service URLs
# =============================================================================
AUTH_SERVICE_URL=http://localhost:3001
EMPLOYEE_SERVICE_URL=http://localhost:3002

# Next.js Apps
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WEB_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001

# =============================================================================
# Email Configuration (for development, use mailcatcher)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@hris.local

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# =============================================================================
# CORS Configuration
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
